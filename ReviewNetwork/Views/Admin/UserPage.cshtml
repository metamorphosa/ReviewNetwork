@model AdminViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Title"];
}

<h1>@Localizer["User"] - @Model.User.UserName</h1>
<div class="row">
    <div class="col-md-6">
        <button onclick="location.href='@Url.Action("Create","Admin")'" type="submit" class="btn btn-primary">@Localizer["Create"]</button>
    </div>
</div>
<table class="table table-sm">
    <thead>
        <tr>
            <th scope="col">@Localizer["UserName"]</th>
            <th scope="col">@Localizer["Email"]</th>
            <th scope="col">@Localizer["PhoneNumber"]</th>
            <th scope="col">@Localizer["Role"]</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.User.UserName</td>
            <td>@Model.User.Email</td>
            <td>@Model.User.PhoneNumber</td>
            <td></td>
        </tr>
    </tbody>
</table>